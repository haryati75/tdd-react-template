{
  "name": "tdd-react-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "A modern React template with TDD best practices, featuring Vite, TypeScript, Vitest for unit testing, and Playwright for E2E testing.",
  "keywords": [
    "react",
    "vite",
    "typescript",
    "vitest",
    "playwright",
    "tdd",
    "testing",
    "e2e",
    "template"
  ],
  "author": "Haryati H <haryati75@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/haryati75/tdd-react-template.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:e2e:report": "playwright show-report",
    "prepare": "husky"
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-istanbul": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
